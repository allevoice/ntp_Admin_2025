<style>
    /* ========================================================== */
    /* SECTION PRINCIPALE & TYPOGRAPHIE */
    /* ========================================================== */

    .privacy-policy-section {
        padding: 80px 0; /* Plus d'espace vertical autour de la section */
        line-height: 1.75; /* Augmente l'interlignage pour une meilleure lisibilité (crucial) */
        font-family: Arial, sans-serif; /* Assure une police sans serif claire */
        color: #333; /* Couleur de texte sombre pour un bon contraste */
        font-size: 16px;
    }

    /* Texte principal */
    .privacy-policy-section p {
        margin-bottom: 20px;
    }

    /* Paragraphe d'introduction et date de mise à jour */
    .privacy-policy-section p.lead {
        font-style: italic;
        color: #6c757d;
        margin-bottom: 5px;
    }

    /* ========================================================== */
    /* TITRES DE SECTION (H1, H2) */
    /* ========================================================== */

    .privacy-policy-section h1 {
        margin-bottom: 30px;
        color: #212529; /* Couleur sombre */
        font-weight: 700;
    }

    /* Titres des chapitres (1., 2., 3., etc.) */
    .privacy-policy-section h2 {
        color: #007bff; /* Utiliser la couleur Bootstrap Primaire pour la distinction */
        margin-top: 40px; /* Espace au-dessus */
        margin-bottom: 20px;
        padding-bottom: 8px;
        border-bottom: 2px solid #f8f9fa; /* Ligne de séparation subtile */
        font-weight: 600;
    }

    /* ========================================================== */
    /* LISTES (INFORMATIONS COLLECTÉES, VOS DROITS) */
    /* ========================================================== */

    .privacy-policy-section ul {
        list-style-type: disc; /* Points standard */
        padding-left: 30px; /* Indentation pour les listes */
        margin-bottom: 30px;
    }

    .privacy-policy-section ul li {
        margin-bottom: 12px; /* Espacement entre chaque point de la liste */
    }

    /* Mettre en valeur le texte fort (Strong) dans les listes */
    .privacy-policy-section ul li strong {
        color: #000; /* Assurez-vous qu'il est bien noir */
        font-weight: 700;
    }

    /* ========================================================== */
    /* LIENS (HYPERLIENS et MAILTO) */
    /* ========================================================== */

    .privacy-policy-section a {
        color: #dc3545; /* Couleur de danger ou d'alerte pour les liens importants */
        text-decoration: none; /* Enlève le soulignement par défaut */
        transition: color 0.2s;
    }

    .privacy-policy-section a:hover {
        color: #b02a37; /* Assombrir au survol */
        text-decoration: underline;
    }

    /* ========================================================== */
    /* RESPONSIVITÉ (Pour petits écrans) */
    /* ========================================================== */

    @media (max-width: 768px) {
        .privacy-policy-section {
            padding: 40px 0;
        }
        .privacy-policy-section h1 {
            font-size: 2.5rem; /* Ajuste la taille du titre principal sur mobile */
        }
    }

</style>


<section class="privacy-policy-section">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                {{ policies |raw }}
            </div>

        </div>
    </div>
</section>
