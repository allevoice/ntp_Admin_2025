{% extends 'theme/temp.html.twig' %}

{% block title %}Page{% endblock %}

{% block body %}
    <style>
        .commande_liste_user{
            margin-top:5%;
        }
    </style>

    <div class="commande_liste_user"></div>


    <div class="container my-5">
        <h1>List of Orders / Invoices <!--Liste des Commandes / Factures--></h1>

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        {% if invoices is empty %}
            <p class="alert alert-info">No orders have been registered yet.{#Aucune commande enregistrée pour le moment#}.</p>
        {% else %}
            <table class="table table-striped table-hover">
                <thead>
                <tr>
{#                    <th>ID Commande</th>
                    <th>Date</th>
                    <th>Client</th>
                    <th>Méthode</th>
                    <th>ID Paiement</th>
                    <th>Actions</th>#}
                    <th>Order ID</th>
                    <th>Date</th>
                    <th>Customer</th>
                    <th>Method</th>
                    <th>Payment ID</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for invoice in invoices %}
                    <tr>
                        <td>{{ invoice.id }}</td>
                        <td>{{ invoice.date_creation|date('d/m/Y H:i') }}</td>
                        <td>client full Name</td>
                        <td>{{ invoice.payment_method|capitalize }}</td>
                        <td>{{ invoice.payment_id }}</td>
                        <td>
                            <a href="{{ path('app_shop_invoice', {'paymentId': invoice.payment_id}) }}" class="btn btn-sm btn-info">Invoice details</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>



{% endblock %}
