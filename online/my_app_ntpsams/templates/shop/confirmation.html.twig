{% extends 'theme/temp.html.twig' %}

{% block title %}Login Page{% endblock %}


{% block body %}


    {% include 'theme/mini_carousel.html.twig' %}




    <div class="container my-5">
        <h1 class="text-success">✅ Order Confirmed! !</h1>
        <p class="lead">Thank you for your purchase. Your payment was processed successfully.</p>

        <hr>

        <div class="row">
            <div class="col-md-6">
                <h2>Payment & Customer Details</h2>

                {# Utilisation de la variable 'order' #}
                <p>Payment Reference (ID):
                    <span class="badge bg-secondary">{{ order.payment_id }}</span>
                </p>
                <p>Order Date:
                    <span class="badge bg-info text-dark">{{ order.date_creation|date('d/m/Y H:i') }}</span>
                </p>

                <ul class="list-group list-group-flush mt-3">
                    {# Les infos client ont été décodées et sont directement dans order.client_info #}
                    <li class="list-group-item">Full name:
                        <strong>{{ order.client_info.customer_firstname }} {{ order.client_info.customer_name }}</strong>
                    </li>
                    <li class="list-group-item">Email:
                        <strong>{{ order.client_info.customer_email }}</strong>
                    </li>
                    <li class="list-group-item">Address:
                        <strong>
                            {{ order.client_info.customer_address_full ?? 'Not specified' }}
                            ({{ order.client_info.customer_city ?? '' }})
                        </strong>
                    </li>
                </ul>
            </div>

            <div class="col-md-6">
                <h2>Items Ordered</h2>
                <ul class="list-group">
                    {% set subtotal_price = 0 %}

                    {# Les articles ont été décodés et sont dans order.articles #}
                    {% for item in order.articles %}
                        {# Les prix sont en cents, convertissons en devise #}
                        {% set price_for_display = item.price_cents / 100  %}
                        {% set item_total = price_for_display * item.qty %}
                        {% set subtotal_price = subtotal_price + item_total %}

                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>{{ item.name }}</strong>
                                <span class="badge bg-info text-dark">{{ item.qty }}x</span>
                            </div>
                            <span class="fw-bold">
                                {{ item_total|number_format(2, '.', ',') }} {{ currence_form }}
                            </span>
                        </li>
                    {% endfor %}
                </ul>

                {# Calcul du total #}
                {% set tax_rate = order.tax_rate %}
                {% set tax_amount = subtotal_price * tax_rate %}
                {% set total_price = subtotal_price + tax_amount %}

                <h3 class="mt-4">Summary</h3>
                <p>Subtotal: {{ subtotal_price|number_format(2, '.', ',') }} {{ currence_form }}</p>
                <p>Tax ({{ (tax_rate * 100)}}%):
                    {{ tax_amount|number_format(2, '.', ',') }} {{ currence_form }}
                </p>
                <h4 class="text-primary">
                    Total (Incl. Tax): <strong>{{ total_price|number_format(2, '.', ',') }} {{ currence_form }}</strong>
                </h4>
            </div>
        </div>

        <div class="mt-5 text-center">
            {# Vous pouvez lier ici à la page d'impression de la facture si elle est prête #}
		<a href="{{ path('app_shop_invoice', {'paymentId': order.payment_id}) }}" class="btn btn-secondary me-2">View/Print Invoice</a>
        <a href="{{ path('app_home_ln') }}" class="btn btn-primary">Return to the store</a>
        </div>
    </div>




{% endblock %}
