                                <label for="password" class="form-label">{% trans %}label_pwd_title{% endtrans %}</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" id="password" name="password" title="{% trans %}label_pwd_title{% endtrans %}" placeholder="{% trans %}pwd_title_placeholder{% endtrans %}"  required>
