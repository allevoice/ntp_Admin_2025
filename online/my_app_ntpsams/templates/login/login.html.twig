        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8">
                <div class="card shadow-lg p-4 p-md-5">
                    <div class="card-body">

                        <h4 class="card-title text-center mb-4">{% trans %}log_in{% endtrans %}</h4>

                        <form action="{{ path('app_login_auth') }}" method="POST">

                            <div class="mb-3">
                                <label for="inputEmail" class="form-label">{% trans %}label_address_email{% endtrans %}</label>
